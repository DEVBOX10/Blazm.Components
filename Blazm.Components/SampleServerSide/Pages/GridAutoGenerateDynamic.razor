@page "/gridautogeneratedynamic"
@using Blazm.Components
@using SampleServerSide.Data
@inject WeatherForecastService ForecastService

<style>
    th {
        white-space: nowrap;
    }
</style>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h2>BlazmGrid - Auto generate columns</h2>
    <BlazmGrid Data="forecasts" PageSize="10" GroupBy="d=>d.Column2" AutoGenerateColumns="true">
        <GroupHeader>
            <h5>@context</h5>
        </GroupHeader>
    </BlazmGrid>
}

@code {
    private List<dynamic> forecasts;

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    protected async Task Load(DateTime? date = null)
    {
        forecasts = new List<dynamic>();
        for (int i= 0; i < 30; i++)
        {
            dynamic t = new System.Dynamic.ExpandoObject();
            t.Column1 = $"test{i}";
            t.Column2 = $"test2{i%2}";
            t.Column3 = "test3";
            forecasts.Add(t);
        }

    }
}
